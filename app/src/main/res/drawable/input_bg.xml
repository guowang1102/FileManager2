<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 边框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/color_e0e0e0" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- 主体背景色 -->

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape>
            <solid android:color="@android:color/white" />
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <corners android:radius="5dp" />
        </shape>


    </item>

</layer-list>